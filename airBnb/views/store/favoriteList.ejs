<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-6 mt-8 max-w-7xl">
      <h2 class="text-2xl text-red-500 font-bold text-center mb-4">
        Here are our favorites List:
      </h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
        <% favoriteHomes.forEach((home) => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition duration-300">
            <div class="relative">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-32 object-cover">
              <div class="absolute top-2 right-2 bg-white px-2 py-0.5 rounded-lg shadow text-sm">
                <span class="text-yellow-500"><%= home.rating %>‚≠ê</span>
              </div>
            </div>
            
            <div class="p-3">
              <h3 class="text-base font-semibold text-gray-800 mb-1 truncate"><%= home.houseName %></h3>
              
              <div class="flex items-center mb-1">
                <svg class="w-4 h-4 text-gray-600 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-gray-600 text-sm truncate"><%= home.location %></span>
              </div>
              
              <div class="mt-2 flex justify-between items-center">
                <div class="text-lg font-bold text-red-500">
                  $<%= home.price %>
                  <span class="text-xs text-gray-500 font-normal">/night</span>
                </div>
                <button class="bg-green-500 text-white px-2 py-1 rounded text-sm hover:bg-green-700 transition duration-300">
                  Book
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>