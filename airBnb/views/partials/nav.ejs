<header class="bg-gradient-to-r from-gray-600 to-gray-800 text-white p-4 shadow-md">
    <nav class="container mx-auto flex justify-between items-center">
      <div>
        <ul class="flex space-x-4">
          <li>
            <a
            href="/"
            class="<%= currentPage === 'index' ? 'bg-rose-600': 'hover:bg-rose-600' %> py-2 px-4 rounded transition duration-300"
            >airbnb</a
          >
        </li>
        <% if(isLoggedIn){ %>
        <li>
          <a
          href="/homes"
          class="<%= currentPage === 'Home' ? 'bg-rose-600': 'hover:bg-rose-600' %> py-2 px-4 rounded transition duration-300"
          >HomeList</a
          >
        </li>
        <li>
          <a
          href="/bookings"
          class="<%= currentPage === 'bookings' ? 'bg-rose-600': 'hover:bg-rose-600' %> py-2 px-4 rounded transition duration-300"
          >Bookings</a
          >
        </li>
        <li>
          <a
          href="/favorites"
          class="<%= currentPage === 'favorites' ? 'bg-rose-600': 'hover:bg-rose-600' %> py-2 px-4 rounded transition duration-300"
          >Favorites</a
          >
        </li>
        <li>
          <a
          href="/host/host-home-list"
          class="<%= currentPage === 'HostHomes' ? 'bg-rose-600': 'hover:bg-rose-600' %> py-2 px-4 rounded transition duration-300"
          >Host Homes</a
          >
        </li>
        <li>
          <a
            href="/host/add-home"
            class="<%= currentPage === 'addHome' ? 'bg-rose-600': 'hover:bg-rose-600' %> py-2 px-4 rounded transition duration-300"
            >Add Home</a
          >
        </li>
      </ul>
      <% } %>
      </div>
      <div>
        <ul class="flex space-x-4">
          <% if(!isLoggedIn){ %>
          <li>
            <a
            href="/login"
            class=" <%= currentPage === 'login' ? 'bg-rose-600': 'hover:bg-rose-600 bg-transparent' %>  border-2 border-rose-600 py-2 px-4 rounded transition duration-300"
            >Login</a
          >
        </li>
        <li>
          <a
          href="/"
          class=" <%= currentPage === 'signup' ? 'bg-rose-600': 'bg-transparent hover:bg-rose-600' %>  border-2 border-rose-600  py-2 px-4 rounded transition duration-300"
          >Signup</a
        >
      </li>
      <% }else{ %>
        <li>
          <form action="/logout" method="POST">
          <button
          type="submit"
          class="hover:bg-rose-600 bg-transparent border-2 border-rose-600 py-2 px-4 rounded transition duration-300"
          >Logout</button
        >
        </form>
        </li>
      <% } %>
         </ul>
      </div>
    </nav>
  </header>