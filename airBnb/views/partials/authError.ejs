<% if( errors.length>0 ) { %>
    <div class="bg-rose-500/20 border-2 border-rose-500/30 rounded-lg p-4 mb-6 animate-fade-in-up">
        <div class="flex items-center mb-2">
            <svg class="w-6 h-6 text-rose-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <strong class="text-rose-400 font-semibold">Validation Errors</strong>
        </div>
        <ul class="space-y-1 text-rose-300 list-disc list-inside">
            <% errors.forEach(error => { %>
                <li class="text-sm"><%= error %></li>
            <% }) %>
        </ul>
    </div>     
<% } %>