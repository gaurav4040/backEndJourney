<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-gray-600 to-black">
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-transparent  shadow-lg rounded-lg p-6 mt-8 max-w-7xl">
      <h2 class="text-2xl text-amber-900 font-bold text-center mb-4">
        Welcome to airbnb ü§©ü•≥ 
      </h2>
      <div class=" bg-transparent  grid grid-cols-2 sm:grid-cols-3 gap-4">
        <% registeredHomes.forEach((home) => { %>
          <div class="bg-transparent border-2 border-gray-400 rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition duration-300">
            <div class="relative p-2">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-32 object-cover">
              <div class="absolute top-2 right-2 bg-transpatent px-2 py-0.5 rounded-lg shadow text-sm">
                <span class="text-yellow-500"><%= home.rating %>‚≠ê</span>
              </div>
            </div>
            
            <div class="p-3">
              <h3 class="text-base font-semibold text-amber-600 mb-1 truncate"><%= home.houseName %></h3>
              
              <div class="flex items-center mb-1">
                <svg class="w-4 h-4 text-white mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-white text-sm truncate"><%= home.location %></span>
              </div>
              
              <div class="mt-2 flex justify-between items-center">
                <div class="text-lg font-bold text-red-500">
                  $<%= home.price %>
                  <span class="text-xs text-white font-normal">/night</span>
                </div>
                <div class="flex ">
                  <a href="/host/edit-home/<%=home._id%>?editing=true" class="bg-blue-500 text-white mx-2 px-3 py-1 rounded text-sm hover:bg-blue-700 transition duration-300">
                    edit
                  </a>
                  <form action="/host/delete-home/<%=home._id%>" method="POST">
                    <button class="bg-red-500 text-white mx-2 px-3 py-1 rounded text-sm hover:bg-red-700 transition duration-300">
                      delete
                    </button>
                  </form>
                  </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>