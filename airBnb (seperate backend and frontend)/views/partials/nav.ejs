<header
  class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 text-white p-4 shadow-lg"
>
  <nav class="container mx-auto flex justify-between items-center">
    <div>
      <ul class="flex space-x-4">
        <li>
          <a
            href="/"
            class="<%= currentPage === 'index' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            airbnb
          </a>
        </li>
        <% if(isLoggedIn){ %>
          <% user=userName ? userName.user_type : Email.user_type %>
          <% if(user==="guest" ){ %>
        <li>
          <a
            href="/homes"
            class="<%= currentPage === 'Home' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            HomeList
          </a>
        </li>
        <li>
          <a
            href="/bookings"
            class="<%= currentPage === 'bookings' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Bookings
          </a>
        </li>
        <li>
          <a
            href="/favorites"
            class="<%= currentPage === 'favorites' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            Favorites
          </a>
        </li>
        <%} else{%>
          <li>
            <a
            href="/host/host-home-list"
            class="<%= currentPage === 'HostHomes' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
            >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
            </svg>
            Host Homes
          </a>
        </li>
        <li>
          <a
            href="/host/add-home"
            class="<%= currentPage === 'addHome' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Home
          </a>
        </li>
          <%}%>
      </ul>
      <% } %>
    </div>
    <div>
      <ul class="flex space-x-4">
        <% if(!isLoggedIn){ %>
        <li>
          <a
            href="/login"
            class="<%= currentPage === 'login' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> border-2 border-white py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            Login
          </a>
        </li>
        <li>
          <a
            href="/signup"
            class="<%= currentPage === 'signup' ? 'bg-white text-indigo-600 shadow-lg': 'hover:bg-white hover:text-indigo-600' %> border-2 border-white py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            Signup
          </a>
        </li>
        <% }else{ %>
        <li>
          <form action="/logout" method="POST">
            <button
              type="submit"
              class="hover:bg-white hover:text-indigo-600 border-2 border-white py-2 px-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-md flex items-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </button>
          </form>
        </li>
        <% } %>
      </ul>
    </div>
  </nav>
</header>
