<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900">
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white/5 backdrop-blur-sm shadow-md shadow-indigo-500/20 rounded-lg p-6 mt-8 max-w-7xl">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl text-indigo-200 font-bold">
          Your Hosted Properties
        </h2>
        <a href="/host/add-home" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition duration-300 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add New Property
        </a>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% registeredHomes.forEach((home) => { %>
          <div class="bg-white/10 backdrop-blur-sm border-2 border-indigo-500/30 rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition duration-300">
            <div class="relative p-2">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-lg">
              <div class="absolute top-2 right-2 bg-indigo-900/80 px-3 py-1 rounded-lg shadow text-sm">
                <span class="text-yellow-400"><%= home.rating %>‚≠ê</span>
              </div>
            </div>
            
            <div class="p-4">
              <h3 class="text-lg font-semibold text-indigo-200 mb-2"><%= home.houseName %></h3>
              
              <div class="flex items-center mb-3">
                <svg class="w-5 h-5 text-indigo-300 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-indigo-200 text-sm"><%= home.location %></span>
              </div>
              
              <div class="mt-4 flex justify-between items-center">
                <div class="text-xl font-bold text-pink-400">
                  $<%= home.price %>
                  <span class="text-sm text-indigo-200 font-normal">/night</span>
                </div>
                <div class="flex space-x-2">
                  <a href="/host/edit-home/<%=home._id%>?editing=true" 
                     class="bg-indigo-600 text-white px-3 py-1 rounded-lg text-sm hover:bg-indigo-700 transition duration-300 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit
                  </a>
                  <form action="/host/delete-home/<%=home._id%>" method="POST" class="m-0">
                    <button type="submit" 
                            class="bg-pink-600 text-white px-3 py-1 rounded-lg text-sm hover:bg-pink-700 transition duration-300 flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>