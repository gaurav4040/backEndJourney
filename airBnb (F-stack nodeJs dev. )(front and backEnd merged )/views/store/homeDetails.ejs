<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900">
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white/5 backdrop-blur-sm shadow-md shadow-indigo-500/20 rounded-lg p-8 mt-10 max-w-6xl">
      <h2 class="text-3xl text-indigo-200 font-bold text-center mb-8">
        <%= home.houseName %>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="rounded-lg overflow-hidden">
          <img src="<%= home.photoUrl %>" alt="<%= home.name %>" class="w-full h-96 object-cover rounded-lg shadow-lg">
        </div>
        
        <div class="space-y-6 text-indigo-200">
          <div class="border-b border-indigo-500/30 pb-4">
            <h3 class="text-2xl font-semibold mb-2 text-indigo-200">Description</h3>
            <p class="text-indigo-200/80"><%= home.description %></p>
          </div>

          <div class="border-b border-indigo-500/30 pb-4">
            <h3 class="text-2xl font-semibold mb-2 text-indigo-200">Location</h3>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-indigo-300 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="text-indigo-200/80"><%= home.location %></p>
            </div>
          </div>
          
          <div class="border-b border-indigo-500/30 pb-4">
            <h3 class="text-2xl font-semibold mb-2 text-indigo-200">Price</h3>
            <p class="text-pink-400 text-2xl font-bold">$<%= home.price %> <span class="text-lg text-indigo-200/80 font-normal">/night</span></p>
          </div>
          
          <div class="border-b border-indigo-500/30 pb-4">
            <h3 class="text-2xl font-semibold mb-2 text-indigo-200">Rating</h3>
            <div class="flex items-center">
              <span class="text-yellow-400 text-2xl">â˜…</span>
              <span class="ml-2 text-xl text-indigo-200/80"><%= home.rating %> / 5</span>
            </div>
          </div>

          <div class="flex justify-between items-center">
            <button class="bg-pink-600 text-white px-6 py-3 rounded-lg text-lg hover:bg-pink-700 transition duration-300">
              Book Now
            </button>
            <div class="mt-2">
              <%- include('../partials/favorite',{home:home}) %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>